generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id     String @id @default(uuid())
  email  String

  visits Visits[]
}

model Visits {
  id          String @id @default(uuid())
  userId      String

  date        DateTime
  notes       String?
  drink       String
  orderType   String
  price       Int
  rating      Int
  shop        String
  size        Int

  user Users @relation(fields: [userId], references: [id])
}